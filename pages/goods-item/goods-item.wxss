/* pages/goods-item/goods-item.wxss */
.tabs-content{
  margin-top: 20rpx;
}
.goods-item{
  display: flex;
  width: 100%;
  border-bottom: 4rpx solid #ccc;
  padding: 30rpx 0;
}
.left-image{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40%;
}
.left-image image{
  position: relative;
  width: 70%;
}
.right-content{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
}
.goods-duc{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-price{
  color: #eb4450;
}